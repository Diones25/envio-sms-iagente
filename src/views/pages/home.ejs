<%- include('../partials/head.ejs'); -%>


    <div class="container my-3">
        <h3 class="display-4 mb-3">Enviar SMS</h3>


        <div class="row">
            <div class="col-lg-6 border border-primary border-2 rounded p-4">
                <form action="/add" method="post">
                    <div class="mb-3">
                        <label for="celular" class="form-label">Telefone:</label>
                        <input type="text" class="form-control" id="celular" name="celular" placeholder="99999999999">
                    </div>
                    <div class="mb-3">
                        <label for="mensagem" class="form-label">Mensagem</label>
                        <textarea class="form-control" id="mensagem" name="mensagem" rows="3"></textarea>
                    </div>
                    <button class="btn btn-success" type="submit">
                        Enviar
                        <span class="ms-1">
                            <i class="fa-solid fa-check"></i>
                        </span>
                    </button>
                </form>
            </div>
        </div>
    </div>

<%- include('../partials/footer.ejs'); -%>

    